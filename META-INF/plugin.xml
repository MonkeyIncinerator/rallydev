<idea-plugin version="2">
    <name>Rally ALM Tasks Integration</name>
    <description>short description of the plugin</description>
    <version>1.0</version>
    <vendor>Rally Software</vendor>

    <depends>com.intellij.tasks</depends>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceInterface="com.rallydev.intellij.config.RallyConfig"
                            serviceImplementation="com.rallydev.intellij.config.RallyConfigImpl"/>

        <applicationService serviceInterface="com.rallydev.intellij.task.RallyRepository"
                            serviceImplementation="com.rallydev.intellij.task.RallyRepository"/>

        <applicationConfigurable serviceInterface="com.rallydev.intellij.task.ui.RepositoryEditor"
                            serviceImplementation="com.rallydev.intellij.task.ui.RepositoryEditorImpl"/>

        <tasks.repositoryType implementation="com.rallydev.intellij.task.RallyRepositoryType"/>
    </extensions>

</idea-plugin>